<h2>Order Time: <%= readable_date(@order.updated_at) %></h2>
<h2>Order Status: <%= @order.status.capitalize %></h2>
<br>
<div class="col-sm-6">
  <table class="table table-hover">
    <tr>
      <th>Item</th>
      <th>Quantity</th>
      <th>Price Per Unit</th>
      <th>Subtotal</th>
    </tr>
    <% @order_items.each do |item| %>
      <tr>
        <td>
          <%= link_to item.product.name, product_path(item.product) %>
        </td>
        <td>
          <%= item.quantity %>
        </td>
        <td>
          <%= cents_to_dollars(item.product.price) %>
        </td>
        <td>
          <%= cents_to_dollars(item.quantity * item.product.price) %>
        </td>
      </tr>
    <% end %>
    <tr>
      <td>
        <h4>Total: <%= cents_to_dollars(session[:total]) %></h4>
      </td>
      <td></td>
      <td></td>
    </tr>
  </table>
</div>
